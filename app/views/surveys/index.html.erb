<div class="container">
  <div class="page-header">
    <div class="btn-toolbar pull-right">
      <div class="btn-group">
        <%= link_to 'New Survey', new_survey_path, class: 'btn btn-primary', :style=>'color:#FFF;' %>
      </div>
    </div>
    <h1>All Surveys</h1>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.name %></td>
        <td><%= link_to 'Show', survey %></td>
        <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
        <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Take Survey', new_response_path(survey_id: survey.id) %></td>
        <td><%= link_to 'View Responses', responses_path%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>




